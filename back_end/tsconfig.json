{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",              // Essencial para o Jest funcionar corretamente
    "esModuleInterop": true,                 // Compatibilidade com módulos CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          // Ativa todas as verificações de tipo estritas
    "skipLibCheck": true,                    // Ignora checagem de tipos em arquivos de definição
    "resolveJsonModule": true,               // Permite importar arquivos JSON
    "outDir": "./dist",                      // Diretório de saída para os arquivos compilados
    "rootDir": "./",                      // Diretório raiz para os arquivos de entrada
    "baseUrl": ".",                          // Diretório base para resolução de módulos
    "paths": {
      "*": ["node_modules/*"]                // Configuração para garantir a resolução de módulos
    }
  },
  "include": [
    "./",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules"                           // Exclui a pasta 'node_modules' da compilação
  ]
}
